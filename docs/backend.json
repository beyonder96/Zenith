{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": [
        "displayName",
        "email"
      ]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a user's project or complex task.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the project."
        },
        "details": {
          "type": "string",
          "description": "A detailed description of the project."
        },
        "dueDate": {
          "type": "string",
          "format": "date",
          "description": "The due date for the project."
        },
        "completed": {
          "type": "boolean",
          "description": "Whether the project is completed."
        },
        "subtasks": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Subtask"
          }
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns the project."
        }
      },
      "required": [
        "title",
        "dueDate",
        "completed",
        "userId"
      ]
    },
    "Subtask": {
      "title": "Subtask",
      "description": "A subtask within a project.",
      "type": "object",
      "properties": {
        "id": {
            "type": "number",
            "description": "A unique identifier for the subtask."
        },
        "text": {
          "type": "string",
          "description": "The description of the subtask."
        },
        "completed": {
          "type": "boolean",
          "description": "Whether the subtask is completed."
        }
      },
      "required": [
        "id",
        "text",
        "completed"
      ]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a financial transaction.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "type": {
          "type": "string",
          "enum": [
            "income",
            "expense"
          ]
        },
        "category": {
          "type": "string"
        },
        "completed": {
          "type": "boolean",
          "description": "Indicates if the transaction has been processed."
        },
        "userId": {
          "type": "string"
        }
      },
      "required": [
        "description",
        "amount",
        "date",
        "type",
        "category",
        "completed",
        "userId"
      ]
    },
    "ShoppingItem": {
      "title": "Shopping Item",
      "description": "An item in the shopping list.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        },
        "quantity": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "userId": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "completed",
        "userId"
      ]
    },
    "SharedShoppingItem": {
      "title": "Shared Shopping Item",
      "description": "An item in a shared shopping list.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        },
        "quantity": {
          "type": "number"
        },
        "price": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "completed"
      ]
    },
    "SharedList": {
      "title": "Shared List",
      "description": "A shopping list that can be shared via a unique link.",
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/SharedShoppingItem"
          }
        },
        "ownerId": {
          "type": "string",
          "description": "The user ID of the list creator."
        }
      },
      "required": [
        "items",
        "ownerId"
      ]
    },
    "Note": {
      "title": "Note",
      "description": "Represents a user's note.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the note."
        },
        "content": {
          "type": "string",
          "description": "The content of the note."
        },
        "color": {
          "type": "string",
          "description": "The background color of the note card."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of tags associated with the note."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns the note."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the note was created."
        }
      },
      "required": [
        "title",
        "content",
        "userId",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/backend/entities/Project"
      },
      "description": "Stores user projects."
    },
    "/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/backend/entities/Transaction"
      },
      "description": "Stores user financial transactions."
    },
    "/shoppingItems/{itemId}": {
      "schema": {
        "$ref": "#/backend/entities/ShoppingItem"
      },
      "description": "Stores user shopping list items."
    },
    "/sharedLists/{listId}": {
      "schema": {
        "$ref": "#/backend/entities/SharedList"
      },
      "description": "Stores shopping lists that are shared publicly via a link."
    },
    "/notes/{noteId}": {
      "schema": {
        "$ref": "#/backend/entities/Note"
      },
      "description": "Stores user notes."
    }
  }
}
