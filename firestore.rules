
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // /users/{userId}
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if isOwner(userId);
    }

    // /projects/{projectId}
    match /projects/{projectId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
    }
    
    // /transactions/{transactionId}
    match /transactions/{transactionId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
    }

    // /shoppingItems/{itemId}
    match /shoppingItems/{itemId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
    }

    // /sharedLists/{listId}
    match /sharedLists/{listId} {
      // Anyone can read and update a shared list (to check/uncheck items).
      allow read, update: if true;
      // Only the authenticated owner can create a shared list.
      allow create: if isOwner(request.resource.data.ownerId);
      // No one can delete a shared list through the client.
      allow delete: if false;
    }

    // /notes/{noteId}
    match /notes/{noteId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
    }

    // /events/{eventId}
    match /events/{eventId} {
      allow get, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
      allow list: if request.auth != null && request.query.get("userId") == request.auth.uid;
    }

    // /goals/{goalId}
    match /goals/{goalId} {
      allow list, get, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
    }

    // /wishlistItems/{itemId}
    match /wishlistItems/{itemId} {
      allow get, delete: if isOwner(resource.data.userId);
      allow create, update: if isOwner(request.resource.data.userId);
      allow list: if request.auth != null;
    }
  }
}
