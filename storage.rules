rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regras para arquivos de pets
    match /pets/{userId}/{folder}/{fileName} 
      where folder == 'photos' || folder == 'rga' {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
